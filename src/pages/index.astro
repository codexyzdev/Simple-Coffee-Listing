---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Coffee List">
  <main class="w-screen h-screen pt-20 relative z-0">
    <Hero />
    <div
      class="max-w-sm mx-auto px-11 pb-8 bg-darkestNight rounded-md shadow-md md:max-w-3xl md:px-16 lg:max-w-5xl"
    >
      <Header />
      <Card />
    </div>
  </main>
</Layout>
